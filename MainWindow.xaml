<Window x:Class="RegistroOrdenes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RegistroOrdenes"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="414">
    <Grid>

        <Menu>
            <MenuItem Header="_Registro">
                <MenuItem x:Name="RegitroClienteMenuItem" Header="_Cliente" Click="RegitroClienteMenuItem_Click"/>
                <MenuItem x:Name="RegitroProductoMenuItem" Header="_Producto" Click="RegitroProductoMenuItem_Click"/>
                <MenuItem x:Name="RegitroOrdenMenuItem" Header="_Orden" Click="RegitroOrdenMenuItem_Click"/>

            </MenuItem>
            <MenuItem Header="_Consulta">
                <MenuItem x:Name="ConsultaClienteMenuItem" Header="_Cliente" Click="ConsultaClienteMenuItem_Click"/>
                <MenuItem x:Name="ConsultaProductoMenuItem" Header="_Producto" Click="ConsultaProductoMenuItem_Click"/>
                <MenuItem x:Name="ConsultaOrdenMenuItem" Header="_Orden" Click="ConsultaOrdenMenuItem_Click"/>

            </MenuItem>
        </Menu>

    </Grid>
</Window>
